<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border"
    android:padding="12dp"
    tools:context=".MainActivity6">

    <TableRow
        android:gravity="end"
        android:layout_marginBottom="-25dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="end"
            android:maxHeight="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icono3puntos"
            />

    </TableRow>

    <TableRow
        android:gravity="center_horizontal|center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/icono1"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="15dp"

            />
    </TableRow> <!-- Row de la imagen -->

    <TableRow
        android:gravity="center_horizontal|center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fernando Miramontes Alvarez "
            android:textStyle="bold"
            android:textColor="#9C65B3"
            android:textAlignment="center"

            />
    </TableRow> <!-- Row del nombre -->

    <TableRow
        android:gravity="center_horizontal|center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="311-269-0083"
            android:textStyle="bold"
            android:textColor="#A49AA8"
            android:textAlignment="center"

            />
    </TableRow> <!-- Row del telefono -->

    <TableRow
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="60dp"
            android:layout_gravity="center"
            android:maxHeight="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icono2"
            android:layout_marginBottom="-15dp"

            />

    </TableRow> <!-- Row del código -->


    <TableRow
        android:gravity="center_horizontal|center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your passcode"
            android:textStyle="bold"
            android:textColor="#A49AA8"
            android:textAlignment="center"

            />
    </TableRow> <!-- Row del texto del código -->


    <TableRow
        android:gravity="center_horizontal|center_vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <GridLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:layout_row="4"
            >

            <TextView
                android:text="1"
                android:padding="35dp"
                android:textSize="20sp"


                />

            <TextView
                android:text="2"
                android:padding="35dp"
                android:textSize="20sp"

                />
            <TextView
                android:text="3"
                android:padding="35dp"
                android:textSize="20sp"

                />
            <TextView
                android:text="4"
                android:padding="35dp"
                android:textSize="20sp"

                />
            <TextView
                android:text="5"
                android:padding="35dp"
                android:textSize="20sp"

                />
            <TextView
                android:text="6"
                android:padding="35dp"
                android:textSize="20sp"

                />
            <TextView
                android:text="7"
                android:layout_rowSpan="2"
                android:padding="35dp"
                android:textSize="20sp"
                />
            <TextView
                android:text="8"
                android:padding="35dp"
                android:textSize="20sp"

                />
            <TextView
                android:text="9"
                android:padding="35dp"
                android:textSize="20sp"

                />
            <TextView
                android:text="0"
                android:padding="35dp"
                android:textSize="20sp"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="50dp"
                android:layout_gravity="center"
                android:maxHeight="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/iconoborra"

                />

        </GridLayout>


    </TableRow>
</TableLayout>