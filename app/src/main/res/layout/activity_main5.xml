<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5">

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="500dp"
      android:background="@drawable/sanganguey"
      />
  <EditText
      android:layout_width="wrap_content"
      android:layout_height="35dp"
      android:layout_alignParentRight="true"
      android:layout_marginTop="100dp"
      android:layout_marginEnd="30dp"
      android:layout_toEndOf="@+id/iconobuscar"
      android:background="@color/transparente"
      android:ems="10"
      android:paddingRight="10dp"
      android:textSize="15dp"
      android:textColor="#000"
      />
  <ImageButton
      android:id="@+id/iconobuscar"
      android:layout_width="wrap_content"
      android:layout_height="35dp"
      android:layout_marginLeft="150dp"
      android:layout_marginTop="100dp"
      android:background="@color/gristransparente3"
      android:clickable="true"
      android:elevation="4dp"
      android:paddingHorizontal="3dp"
      android:src="@drawable/ic_baseline_search_24"
      />
  <TextView
      android:id="@+id/titulo"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="400dp"
      android:background="@drawable/text_view_circle3"
      android:paddingHorizontal="30dp"
      android:paddingTop="20dp"
      android:text="Volcán Sangangüey"
      android:textSize="30sp"
      android:textStyle="bold"
      android:textColor="#888888"
      />
  <TextView
      android:id="@+id/info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/titulo"
      android:layout_alignParentBottom="true"
      android:background="#FFF"
      android:paddingHorizontal="30dp"
      android:paddingTop="20dp"
      android:paddingBottom="70dp"
      android:text="Es uno de los más importantes emblemas geográficos del municipio de Tepic y del estado de Nayarit. Se eleva 2.340 msnm y en tiempo claro su cumbre es un excelente mirador natural para admirar los vastos espacios tepiqueños y nayaritas."
      android:textColor="#FF888888"
      android:textSize="16sp"
      />
  <Button
      android:id="@+id/fecha1"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="30dp"
      android:layout_marginEnd="15dp"
      android:layout_marginBottom="50dp"
      android:backgroundTint="#A8A8A8"
      android:elevation="4dp"
      android:text="JUL\n18"
      android:textColor="#FFF"
      android:textSize="20sp"
      />
  <Button
      android:id="@+id/fecha2"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:layout_toEndOf="@+id/fecha1"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="50dp"
      android:backgroundTint="#000"
      android:elevation="4dp"
      android:text="JUL\n30"
      android:textColor="#FFF"
      android:textSize="20sp"
      />
  <Button
      android:id="@+id/puntos"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:layout_marginEnd="30dp"
      android:layout_marginBottom="50dp"
      android:text="..."
      android:textSize="25sp"
      android:textColor="#FFF"
      android:backgroundTint="@color/peach"
      android:elevation="4dp"
      />
</RelativeLayout>